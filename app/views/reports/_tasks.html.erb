<ul class="collection with-header collapsible overflow-visible" data-collapsible="accordion">
  <li class="collection-header">
    <h4><i class="material-icons"><%=type%></i> <%=title%></h4>
  </li>
  <% curr_date = 0 %>
  <% tasks.each do |task| %>

  <% if( title=="Due" && curr_date != task.due_date )  %>
  <% (dday = (Date.today - task.due_date).to_i) %>

  <li >
    <div class="collapsible-header dday" >
      <div class="col s2 m2 dday-header center-align" >
        <% if( dday > 0 ) %>
          <%= "D+#{(Date.today - task.due_date).to_i}" %>
        <% elsif( dday ==0 ) %>
          <%= "D-day" %>
        <% else %>
          <%= "D#{(Date.today - task.due_date).to_i}" %>
        <% end %>
      </div>
      <div class="col s10 m10 gauge" data-dday="<%= (task.due_date-Date.today).to_i %>" >&nbsp;</div>

    </div>

  </li>
    <% curr_date  = task.due_date %>
  <% end %>

  <li >
    <div class="collapsible-header">
      <%= task.title %>
      <span class="badge">
      <% if( task.has_subpoint? )%>
        <%= task.total_completed_subpoint %> / <%= task.total_subpoint %>
      <% elsif task.point %>
        <a class='dropdown-button btn-floating' href='#' data-activates='dropdown<%= task.id %>'>
          <%= task.point %>
        </a>

        <!-- Dropdown Structure -->
        <ul id='dropdown<%= task.id %>' class='dropdown-content' style="z-index: 100;">
          <li><a href="#!">1</a></li>
          <li><a href="#!">2</a></li>
          <li><a href="#!">3</a></li>
          <li><a href="#!">5</a></li>
          <li><a href="#!">8</a></li>
        </ul>
      <% end %>
      </span>
    </div>

    <% if( task.has_subpoint? ) %>
    <div class="collapsible-body">
      <ul class="collection sub-collection">
        <% task.subtasks.each do |subtask| %>
          <li class="collection-item">
            <% if(subtask.completed_at) %>
            <span class="grey-text">
              <strike >
                <%= subtask.title %>
              </strike>
            </span>
            <% else %>
              <%= subtask.title %>
            <% end %>
            <span class="badge"><%= subtask.point %></span>
          </li>
        <% end %>
      </ul>
    </div>
    <% end %>
  </li>
  <% end %>
</ul>

