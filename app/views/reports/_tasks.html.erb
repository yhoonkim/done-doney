<ul class="collection with-header collapsible" data-collapsible="accordion">
  <li class="collection-header">
    <h4><i class="material-icons"><%=type%></i> <%=title%></h4>
  </li>
  <% tasks.each do |task| %>
  <li >
    <div class="collapsible-header">
      <%= task.title %>
      <span class="badge">
      <% if( task.has_subpoint? )%>
        <%= task.total_completed_subpoint %> / <%= task.total_subpoint %>
      <% else %>
        <%= task.point %>
      <% end%>
      </span>
    </div>
    <% if( task.has_subpoint? ) %>
    <div class="collapsible-body">
      <ul class="collection sub-collection">
        <% task.subtasks.each do |subtask| %>
          <li class="collection-item">
            <% if(subtask.completed_at) %>
            <span class="grey-text">
              <strike >
                <%= subtask.title %>
              </strike>
            </span>
            <% else %>
              <%= subtask.title %>
            <% end %>
            <span class="badge"><%= subtask.point %></span>
          </li>
        <% end %>
      </ul>
    </div>
    <% end %>
  </li>
  <% end %>
</ul>